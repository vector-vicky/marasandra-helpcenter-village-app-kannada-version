<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transportbackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/activity_transport_bus_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="160dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_directions_bus_black_24dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/activity_transport_auto_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_directions_car_black_24dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="80dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textSize="20dp" />



</LinearLayout>
</ScrollView>