<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidmobile"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/activity_main_hospital_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle"
        android:drawableRight="@drawable/ic_local_hospital_black_24dp"
        android:drawablePadding="5dp"
        android:paddingRight="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25sp" />

        <Button
            android:id="@+id/activity_main_transport_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_hospital_button"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="5dp"
            android:paddingRight="20dp"
            android:background="@drawable/rectangle"
            android:drawableRight="@drawable/ic_directions_bus_black_24dp"
            android:textStyle="bold"
            android:textSize="25sp" />

        <Button
            android:id="@+id/activity_main_education_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_transport_button"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangle"
            android:layout_marginRight="5dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_school_black_24dp"
            android:textSize="25sp" />




    </LinearLayout>
</ScrollView>