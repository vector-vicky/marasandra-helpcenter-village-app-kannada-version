<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
        <TextView
            android:id="@+id/activity_east_point_address_tag"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fav"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:id="@+id/activity_east_point_address"/>

        <TextView
            android:id="@+id/activity_east_point_websites_tag"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/fav"
            android:clickable="true"
            style="text-decoration underline"
            android:textSize="20dp"
            android:id="@+id/activity_east_point_website"/>

        <TextView
            android:id="@+id/activity_east_point_emergency_tag"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/activity_east_point_emergency"/>


    
    
    
    
    
    
    
    
    
    
    
    </LinearLayout>
    
</ScrollView>