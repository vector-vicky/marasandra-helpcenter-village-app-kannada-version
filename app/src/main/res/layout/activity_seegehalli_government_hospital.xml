<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/activity_seegehalli_address_tag"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_seegehalli_address_tag"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:id="@+id/activity_seegehalli_address"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timings_tag"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/activity_seegehalli_address"
            android:textColor="#000"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timings"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/timings_tag"
            android:textColor="#000"
            android:textSize="20dp"
            />




    </RelativeLayout>

</ScrollView>